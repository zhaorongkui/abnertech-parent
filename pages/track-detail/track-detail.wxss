/* pages/track-detail/track-detail.wxss */

.i-t-wrap {
  padding-bottom: 150rpx;
  height:100%;
}

/*科目*/

.i-t-scroll-nav {
  height: 122rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  background: #fff;
  font-size: 28rpx;
  white-space: nowrap;
  margin-top:68rpx;
  display:flex;
  justify-content: space-between;
  align-items: center;
  flex-flow: column;
  border-top:1px solid #eee;
}

.i-t-scroll-nav-item {
  width: 112rpx;
  height: 60rpx;
  line-height: 60rpx;
  display: inline-block;
  text-align: center;
  background: #f7f7f7;
  border-radius: 30rpx;
  margin:31rpx 0 0 20rpx;
  color:#999;
}
.i-t-null{
  width:100%;
  text-align: center;
  color:#fff;
  font-size:28rpx;
  margin-top:128rpx;
}
.i-t-null-line{
  width:100%;
  height:100%;
  line-height: 350rpx;
  text-align: center;
  color:#e5e5e5;
  font-size:28rpx;
}
.i-t-scroll-nav-item.active {
  background-image: linear-gradient(-225deg, #4B97FF 0%, #5869FF 100%);
  color: #fff;
}
.i-t-tab-box{
    height: 100%;
    box-sizing: border-box;
    padding-top:210rpx;
}
.i-t-tab-content{
    overflow-y: scroll;
}
.i-t-banner {
  width: 680rpx;
  height: 298rpx;
  opacity: 0.9;
  background-image: linear-gradient(270deg, #4b97ff 0%, #5869ff 100%);
  border-radius: 20rpx;
  margin: 30rpx auto 0;
  position: relative;
  overflow: auto;
}

.i-t-lead {
  width: 680rpx;
  margin: 40rpx auto 0;
  background: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-radius: 20rpx;
  height: 100rpx;
  line-height: 40rpx;
}

.i-t-lead image {
  width: 41rpx;
  height: 41rpx;
}

.i-t-lead view {
  width: 80%;
  font-size: 28rpx;
  color: #999;
}

.i-t-lead view text {
  font-size: 40rpx;
  color: #fc5c3c;
  padding: 0 20rpx;
}

.margin-l {
  width: 214rpx;
  height: 214rpx;
  position: absolute;
}

.ll {
  left: 60rpx;
  top: 46rpx;
}

.rr {
  right: 60rpx;
  top: 46rpx;
}
.i-t-s-tj{
  width:680rpx;
  margin: 40rpx auto 0;
}
.i-t-s-tj view{
  width:300rpx;
  height:190rpx;
  float:left;
  background:#fff;
  margin-left:26rpx;
  margin-top:26px;
  border-radius: 20rpx;
  display:flex;
  justify-content:center;
  align-items: center;
  flex-flow: column;
}
.i-t-s-tj view text{
  font-size:70rpx;
  color:#969696;
}
.i-t-s-tj view text:nth-of-type(2){
  font-size:24rpx;
}
.i-t-s-detail {
  width: 680rpx;
  margin: 30rpx auto 0;
  overflow: auto;
}

.i-t-s-line {
  position: relative;
  width: 680rpx;
  margin: 70rpx auto 0;
  height: 500rpx;
}

.i-t-panel {
  height: 34rpx;
}

.i-t-panel text:nth-of-type(1) {
  display: block;
  width: 8rpx;
  background: #4489ff;
  height: 32rpx;
  float: left;
  border-radius: 6rpx;
  margin-top: 1%;
}

.i-t-panel text:nth-of-type(2) {
  display: block;
  font-size: 34rpx;
  color: #333;
  float: left;
  margin-left: 20rpx;
}

.container_ {
  position: absolute;
  top: 35rpx;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  width: 95%;
  height: 80%;
  background: #fff;
  border-radius: 20rpx;
}

ec-canvas {
  width: 100%;
  height: 100%;
}

.i-t-s-types {
  width: 680rpx;
  height: 140rpx;
  border-radius: 20rpx;
  background: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top: 35rpx;
}

.i-t-s-types view {
  border-right: 1px solid #eaecef;
  height: 40rpx;
}

.i-t-s-types view image {
  width: 40rpx;
  height: 40rpx;
}

.i-t-s-types view.i-t-tip image {
  width: 14rpx;
  height: 27rpx;
}

.i-t-s-types view:nth-of-type(1) {
  width: 25%;
  padding: 0 25rpx 0 20rpx;
  display: flex;
  justify-content: space-around;
}

.i-t-s-types view:nth-of-type(1) text {
  color: #333;
  font-size: 34rpx;
}

.i-t-s-types view:nth-of-type(n+2) text:nth-of-type(1) {
  font-size: 40rpx;
}

.i-t-s-types view:nth-of-type(n+2) text:nth-of-type(2) {
  color: #999;
  font-size: 22rpx;
}

.i-t-s-types view:nth-of-type(n+2) {
  display: flex;
  justify-content: center;
  flex-flow: column;
  align-items: center;
  width: 35%;
}

.i-t-s-types view:nth-of-type(n+3) {
  border-right: 0;
}

.i-t-s-types view:last-child {
  display: flex;
  justify-content: center;
  flex-flow: column;
  align-items: center;
  width: 15%;
}

ec-canvas {
  width: 100%;
  height: 100%;
}

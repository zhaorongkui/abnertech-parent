.titile-pj text {
  color: #4489ff;
  font-size: 30rpx;
}

.title-tx {
  margin: 20rpx 0 0 30rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.title-tx image {
  width: 98rpx;
  height: 98rpx;
  border-radius: 50%;
  margin-right: 50rpx;
}

.title-tx view {
  width: 68%;
  height: auto;
  position: relative;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 2px 8px 2px rgba(149, 149, 149, 0.15);
  border: 1px solid rgba(234, 234, 234, 1);
  padding: 15rpx;
  border-radius: 20rpx;
  min-height: 90rpx;
}

.title-tx view text:nth-child(1)::before {
  box-sizing: content-box;
  width: 0px;
  height: 0px;
  position: absolute;
  top: 35%;
  left: -28rpx;
  padding: 0;
  border-right: 15rpx solid rgba(149, 149, 149, 0.15);
  border-top: 15rpx solid transparent;
  border-bottom: 15rpx solid transparent;
  border-left: 15rpx solid transparent;
  display: block;
  content: '';
  z-index: 12;
}

.title-tx view text:nth-child(1)::after {
  box-sizing: content-box;
  width: 0px;
  height: 0px;
  position: absolute;
  top: 35%;
  left: -26rpx;
  padding: 0;
  border-right: 15rpx solid #fff;
  border-top: 15rpx solid transparent;
  border-bottom: 15rpx solid transparent;
  border-left: 15rpx solid transparent;
  display: block;
  content: '';
  z-index: 13;
}

.title-tx view text:nth-child(2) {
  color: #333;
  font-size: 24rpx;
  width: 100%;
  height: 100%;
  float: left;
}

.content {
  margin-top: 50rpx;
}

.content > view {
  width: 90%;
  margin: 0 auto;
  min-height: 50rpx;
  background: rgba(241, 245, 255, 1);

/* pages/track/track.wxss */

.i-t-wrap {
  padding-bottom: 150rpx;
}
.i-t-banner {
  width: 680rpx;
  height: 298rpx;
  opacity: 0.9;
  background-image: linear-gradient(270deg, #4b97ff 0%, #5869ff 100%);
  border-radius: 20rpx;
  margin: 100rpx auto 0;
  position: relative;
}

.i-t-lead {
  width: 680rpx;
  margin: 40rpx auto 0;
  background: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-radius: 20rpx;
  height: 100rpx;
  line-height: 40rpx;
}

.i-t-lead image {
  width: 41rpx;
  height: 41rpx;
}

.i-t-lead view {
  width: 80%;
  font-size: 28rpx;
  color: #999;
}

.i-t-lead view text {
  font-size: 40rpx;
  color: #fc5c3c;
  padding: 0 10rpx;
}
.i-t-null-data{
  width:100%;
  height:100%;
  line-height: 298rpx;
  text-align: center;
  color:#fff;
  font-size:28rpx;
}
.i-t-null-line{
  width:100%;
  height:100%;
  line-height: 350rpx;
  text-align: center;
  color:#e5e5e5;
  font-size:28rpx;
}
.margin-l {
  width: 214rpx;
  height: 214rpx;
  position: absolute;
}

.ll {
  left: 60rpx;
  top: 46rpx;
}

.rr {
  right: 60rpx;
  top: 46rpx;
}

.i-t-s-detail {
  width: 680rpx;
  margin: 50rpx auto 0;
  overflow: auto;
}
.i-t-s-line {
  position: relative;
  width: 680rpx;
  margin: 70rpx auto 0;
  height: 500rpx;
}

.i-t-panel {
  height: 34rpx;
  position:relative;
}

.i-t-panel > text:nth-of-type(1) {
  display: block;
  width: 8rpx;
  background: #4489ff;
  height: 32rpx;
  float: left;
  border-radius: 6rpx;
  margin-top: 1%;
}

.i-t-panel > text:nth-of-type(2) {
  display: block;
  font-size: 34rpx;
  color: #333;
  float: left;
  margin-left: 20rpx;
}
.i-t-panel image{
  width:30rpx;
  height:30rpx;
  margin-left:20rpx;
  margin-top:13rpx;
}
.i-t-panel view {
  position:absolute;
  left:60%;
  top:-159%;
  width: auto;
  height: auto;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 2px 8px 2px rgba(149, 149, 149, 0.15);
  border: 1px solid rgba(234, 234, 234, 1);
  padding: 10rpx;
  border-radius: 20rpx;
  z-index:99999999999;
}
.i-t-panel > view > text{
  color:#999;
  font-size:24rpx;
}
.i-t-panel view text:nth-child(1)::before {
  box-sizing: content-box;
  width: 0px;
  height: 0px;
  position: absolute;
  top: 35%;
  left: -28rpx;
  padding: 0;
  border-right: 15rpx solid rgba(149, 149, 149, 0.15);
  border-top: 15rpx solid transparent;
  border-bottom: 15rpx solid transparent;
  border-left: 15rpx solid transparent;
  display: block;
  content: '';
  z-index: 12;
}

.i-t-panel view text:nth-child(1)::after {
  box-sizing: content-box;
  width: 0px;
  height: 0px;
  position: absolute;
  top: 35%;
  left: -26rpx;
  padding: 0;
  border-right: 15rpx solid #fff;
  border-top: 15rpx solid transparent;
  border-bottom: 15rpx solid transparent;
  border-left: 15rpx solid transparent;
  display: block;
  content: '';
  z-index: 13;
}
.container_ {
  position: absolute;
  top: 35rpx;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  width: 95%;
  height: 80%;
  background: #fff;
  border-radius: 20rpx;
}

#pieSelect {
  width: 100%;
  height: 100%;
}

.i-t-s-types {
  width: 680rpx;
  height: 140rpx;
  border-radius: 20rpx;
  background: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top: 35rpx;
}

.i-t-s-types view {
  border-right: 1px solid #eaecef;
  height: 40rpx;
}

.i-t-s-types view image {
  width: 40rpx;
  height: 40rpx;
}
.i-t-s-types view.i-t-tip image{
  width:14rpx;
  height:27rpx;
}
.i-t-s-types view:nth-of-type(1) {
  width: 25%;
  padding: 0 25rpx 0 20rpx;
  display: flex;
  justify-content: space-around;
}

.i-t-s-types view:nth-of-type(1) text {
  color: #333;
  font-size: 34rpx;
}

.i-t-s-types view:nth-of-type(n+2) text:nth-of-type(1) {
  font-size: 40rpx;
}

.i-t-s-types view:nth-of-type(n+2) text:nth-of-type(2) {
  color: #999;
  font-size: 22rpx;
}

.i-t-s-types view:nth-of-type(n+2) {
  display: flex;
  justify-content: center;
  flex-flow: column;
  align-items: center;
  width: 35%;
}

.i-t-s-types view:nth-of-type(n+3) {
  border-right: 0;
}

.i-t-s-types view:last-child {
  display: flex;
  justify-content: center;
  flex-flow: column;
  align-items: center;
  width: 15%;
}

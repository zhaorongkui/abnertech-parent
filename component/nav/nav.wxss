/* component/nav/nav.wxss */

.i-nav {
  width: 100%;
  height: 68rpx;
  display: flex;
  justify-content: space-around;
  background: #fff;
  position: fixed;
  left: 0;
  top: 0rpx;
  z-index: 99999;
}

.i-nav cover-view {
  display: block;
  width: 150rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  font-size: 34rpx;
  color: #999;
}
.i-nav .i-nav-b{
  height: 2px solid #4489ff;
  background:#4489ff;
  color:#4489ff;
}
.i-nav cover-view.active {
  border-bottom: 2px solid #4489ff;
  color: #4489ff;
}

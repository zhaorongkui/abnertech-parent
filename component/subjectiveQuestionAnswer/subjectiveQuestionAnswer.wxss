  font-size: 26rpx;
}

.zg-questions-answer {
  margin: 20rpx 30rpx;
  flex-direction: column;
}

.swiper-container {
  position: relative;
}

.swiper-container,
.swiper-slide,
.swiper-wrapper {
  width: 650rpx;
  height: 290rpx;
}

.swiper-slide image {
  width:100%;
  height: 100%;
}

.swiper-pagination {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  padding: 2px 20rpx;
  background: rgba(0, 0, 0, 0.4);
  border-radius: 40rpx;
  font-size: 24rpx;
  color: #fff;
}

.judge-score {
  position: absolute;
  left: 11rpx;
  top: 10rpx;
  width: 110rpx;
  height: 130rpx;
  background: #fff;
  border-radius: 0rpx 0rpx 50rpx 50rpx;
  z-index: 10;
  text-align: center;
}


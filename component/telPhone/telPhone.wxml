<view>
  <view class="sh_tel" animation="{{animationData}}">
    <view class="spread_tel" animation="{{animationData_o}}">
      <image src="../../assets/telphone.png"></image>
      <view>
        <text style="font-size:28rpx;">400-016-2123</text>
        <text style="font-size:24rpx;">使用产品有问题？请电话联系客服～</text>
      </view>
    </view>
    <view class="close_tel" bindtap='tel_c'>
      <image src="{{imgurl}}" bindtap='tel_c'></image>
    </view>
  </view>

  <view class="cl_tel" bindtap='tel_co' wx:if="{{show}}">
    <image src="../../assets/telphone.png" bindtap='callPhone' data-ph="{{tel}}"></image>
  </view>
</view>
.choseItem {
 background: #eeeeee;
  display:flex;
  justify-content: flex-start;
  margin-bottom:20rpx;
  margin-top:20rpx;
  align-items: center;
  min-height:44rpx;
  border-radius:9rpx;
  color:#666;
  font-size:30rpx;
  padding:18rpx 20rpx;
  position:relative;
}
.choseItem > view.fc{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 99;
}
.choseItem > view.fc > view{
   width: 100%;
  height: 100%;
}
.choseItem > view.fc > view .el-span {
  display:block;
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 999;
  
}

.ul {
  white-space: nowrap;
  padding: 20rpx 10rpx 20rpx;
  overflow: scroll;
  padding-right: 20rpx;
  width: 97%;
}

.li {
  display: inline-block;
  margin-left: 10px;
  border: 1px solid #eee;
  text-align: center;
  line-height: 54rpx;
  border-radius: 40rpx;
  width:155rpx;
  height:54rpx;
  font-size: 28rpx;
  color:#999;
}

.liactive {
  background: #00a26d;
  border: 1px solid #00a26d;
  color:#fff;
}

.swiper-container {
  position: relative;
}

.swiper-container,
.swiper-slide,

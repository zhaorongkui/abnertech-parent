}
.swiper-slide .slide-image {
  max-width: 100%;
  max-height: 100%;
}

.swiper-pagination {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  padding: 2px 20rpx;
  background: rgba(0, 0, 0, 0.4);
  border-radius: 40rpx;
  font-size: 24rpx;
